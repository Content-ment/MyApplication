<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="410dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <TextView
        android:id="@+id/tf"
        android:layout_width="268dp"
        android:layout_height="70dp"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:text="This is a Binary-Decimal converter."
        app:layout_constraintBottom_toTopOf="@+id/button_ZERO22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_ZERO22"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/button_RESET2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="38.3333333" />

    <Button
        android:id="@+id/button_RESET2"
        android:layout_width="188dp"
        android:layout_height="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="C"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_TWO2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_ZERO22"
        app:layout_constraintTop_toBottomOf="@+id/tf" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <Button
        android:id="@+id/button_ONE2"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/button_TWO2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ZERO22" />

    <Button
        android:id="@+id/button_TWO2"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:text="2"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/button_FIVE2"
        app:layout_constraintEnd_toStartOf="@+id/button_THREE2"
        app:layout_constraintStart_toEndOf="@+id/button_ONE2"
        app:layout_constraintTop_toBottomOf="@+id/button_RESET2" />

    <Button
        android:id="@+id/button_THREE2"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_TWO2"
        app:layout_constraintTop_toBottomOf="@+id/button_RESET2" />

    <Button
        android:id="@+id/button_FOUR2"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/button_FIVE2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ONE2" />

    <Button
        android:id="@+id/button_FIVE2"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_EIGHT2"
        app:layout_constraintEnd_toStartOf="@+id/button_SIX2"
        app:layout_constraintStart_toEndOf="@+id/button_FOUR2"
        app:layout_constraintTop_toBottomOf="@+id/button_TWO2" />

    <Button
        android:id="@+id/button_SIX2"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_NINE2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_FIVE2"
        app:layout_constraintTop_toBottomOf="@+id/button_THREE2" />

    <Button
        android:id="@+id/button_SEVEN2"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/button_EIGHT2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_FOUR2" />

    <Button
        android:id="@+id/button_EIGHT2"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_B2D"
        app:layout_constraintEnd_toStartOf="@+id/button_NINE2"
        app:layout_constraintStart_toEndOf="@+id/button_SEVEN2"
        app:layout_constraintTop_toBottomOf="@+id/button_FIVE2" />

    <Button
        android:id="@+id/button_NINE2"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_EIGHT2"
        app:layout_constraintTop_toBottomOf="@+id/button_SIX2" />

    <Button
        android:id="@+id/button_B2D"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="381dp"
        android:text="B2D"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_D2B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_SEVEN2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_D2B"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="381dp"
        android:text="D2B"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_B2D"
        app:layout_constraintTop_toBottomOf="@+id/button_EIGHT2"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.383333" />


</android.support.constraint.ConstraintLayout>